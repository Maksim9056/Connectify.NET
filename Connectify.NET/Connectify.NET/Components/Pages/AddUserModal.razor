<div class="modal" tabindex="-1" style="display: @(_showModal ? "block" : "none")">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="close" @onclick="HideModal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ModalBody
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="HideModal">Close</button>
                <!-- Example save button -->
                <button type="button" class="btn btn-primary" @onclick="SaveChanges">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Modal Title";
    private bool _showModal = false;

    [Parameter] public RenderFragment ModalBody { get; set; }

    public void Show()
    {
        _showModal = true;
    }

    public void HideModal()
    {
        _showModal = false;
    }

    private void SaveChanges()
    {
        // Implement your save logic here
        // For example, you can emit an event or call a method
        // to save the changes made in the modal.
        HideModal(); // Close the modal after saving
    }
}
